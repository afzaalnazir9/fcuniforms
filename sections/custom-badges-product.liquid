<section
  id="MainProduct-{{ section.id }}"
  class="u4a-single-product u4a-custom-badge page-width"
  data-section="{{ section.id }}"
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-rte.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
  {{ 'custom-badges.css' | asset_url | stylesheet_tag }}

  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

  <div class="t4s-container t4s-main-product__content is--layout_{{ se_stts.pr_layout }} t4s-product-media__{{ media_layout }} t4s-product-thumb-size__{{ se_stts.thumb_lr_size }}">
  <div class="t4s-row">
    <div class="t4s-col-item t4s-col-12 t4s-main-area">
      <div class="t4s-product__no_media t4s-pr custom-badge-media-holder">
        <div style="padding-top:30px">
          <svg
            width="320"
            height="486"
            version="1.1"
            id="badges-svg"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            class="hidden"
            style="position:absolute;display:none"
          >
            <defs>
              
              {% assign svgDefsPaths = product.metafields.custom.custom_details.value['svg-defs-paths'] %}
              {% for property in svgDefsPaths -%}
                <path id="panel{{ forloop.index }}" d="{{ property.path }}" data-size="{{ property.font_size }}"></path>
              {%- endfor %}
            </defs>

            {% assign badgesDetails = product.metafields.custom.custom_details.value.badges %}
            {% for property in badgesDetails -%}
              <image class="custom-badge-image {{ property.title | handle }} {% if forloop.index != 1 %}hidden{% endif %}" x="0" y="0" width="100%" height="100%" xlink:href="{{ property.actual_image }}" />
            {%- endfor %}

            {% for property in svgDefsPaths -%}
               <text font-family="Impact, Charcoal, sans-serif" font-size="{{ property.font_size }}" font-weight="bold" fill="#000000" text-anchor="middle">
                {% if forloop.index != svgDefsPaths.size %}
                 <textPath id="text-panel{{ forloop.index }}" class="panel-text-path" xlink:href="#panel{{ forloop.index }}" startOffset="50%"></textPath>
                 {% else %}
                  <textPath id="text-panel-last" class="panel-text-path" xlink:href="#panel{{ forloop.index }}" startOffset="50%"></textPath>
                {% endif %}
               </text>
             {%- endfor %}

            {% assign sealPosition = product.metafields.custom.custom_details.value.seal_position %}
            <foreignObject x="{{ sealPosition.x }}" y="{{ sealPosition.y }}" width="{{ sealPosition.width }}" height="{{ sealPosition.height }}">
              <img class="custom-badge-seal-style hidden" width="{{ sealPosition.width }}" height="{{ sealPosition.height }}" src="" loading="lazy" />
            </foreignObject>
          </svg>

          <img
            id="canvas-image-placeholder"
            class="hidden"
            width="320"
            height="486"
            src="https://www.uniformswarehouse.com/media/catalog/product/m/a/main-placeholder_1_1.jpg"
            loading="lazy"
          >
          <div id="custom-badge-image-container" style="position:absolute;top:0"></div>
        </div>
      </div>
    </div>

        <div data-t4s-zoom-info class="t4s-{{ class_info }} t4s-col-12 t4s-col-item t4s-product__info-wrapper t4s-pr">
                
      <div
        id="ProductInfo-{{ section.id }}"
        class="product__info-container product__info-container--sticky" style="float:right;margin-top:-470px"
      >
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        <div class="form-header">
          <div class="badge-placeholder">
            {% for property in badgesDetails -%}
              <img
                src="{{ property.placeholder_image }}"
                width="90"
                height="136"
                loading="lazy"
                class="{{ property.title | handle }} {% if forloop.index != 1 %}hidden{% endif %}"
              >
            {%- endfor %}
          </div>
          <div class="badge-details">
            <div class="badge-title">
              <div>Design: {{ product.title | escape }}</div>
            </div>
            <div class="badge-color">
              <div>Color: {{ badgesDetails.first.title }}</div>
            </div>
            <div class="badge-dimensions">
              <div>
                Dimensions:
                <span class="badge-full-size-dimension">
                  {{- product.metafields.custom.badge_full_size_dimensions -}}
                </span>
                <span class="badge-mini-dimension hidden">
                  {{- product.metafields.custom.badge_miniature_dimensions -}}
                </span>
              </div>
            </div>
          </div>
        </div>

        <div>
          <product-form class="product-form">
            <div class="product-form__error-message-wrapper" role="alert" hidden>
              <svg
                aria-hidden="true"
                focusable="false"
                role="presentation"
                class="icon icon-error"
                viewBox="0 0 13 13"
              >
                <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
              </svg>
              <span class="product-form__error-message"></span>
            </div>

            {%- form 'product',
              product,
              id: product_form_id,
              class: 'form u4a-custom-badges-form',
              novalidate: 'novalidate',
              data-type: 'add-to-cart-form'
            -%}
              <input
                type="hidden"
                name="id"
                value="{{ product.selected_or_first_available_variant.id }}"
                disabled
              >
              <input
                type="hidden"
                name="variantPrice"
                id="u4a-variant-price"
                value="{{ product.selected_or_first_available_variant.price }}"
                disabled
              >

              {% render 'custom-badge-properties' %}

              <div class="badge-quantity-pricing" data-pricing-json="">
                {% for property in badgesDetails -%}
                  {% assign badgePrice = property.quantity_pricing %}
                  <table
                    class="table {{ property.title | handle }}{% if forloop.index != 1 %} hidden{% endif %}"
                    border="1"
                  >
                    <thead>
                      <tr>
                        <th>Quantity</th>
                        {% for price in badgePrice -%}
                          <td>{{ price.quantity }}</td>
                        {%- endfor %}
                        <th>Size</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th>Unit Price</th>
                        {% for price in badgePrice -%}
                          <td
                            class="badge-per-price"
                            data-quantity="{{ price.quantity }}"
                            data-full-price="{{ price.full_price }}"
                            data-mini-price="{{ price.mini_price }}"
                          >
                            {{ price.full_price }}
                          </td>
                        {%- endfor %}
                        <th class="badge-size">Full size</th>
                      </tr>
                    </tbody>
                  </table>
                {%- endfor %}
              </div>

              <div class="badge-turnaround-time">
                Turnaround time for custom badge orders is approximately 3 to 4 months. Expedited Shipping does not
                apply to production time. For custom badge molds, please <a href="/pages/contact">contact us</a>.
              </div>

              <div class="form-footer">
                <div class="product-form__input product-form__quantity">
                  <label class="form__label" for="Quantity-{{ section.id }}">
                    {{ 'products.product.quantity.label' | t }}
                  </label>

                  <quantity-input class="quantity">
                    <button class="quantity__button no-js-hidden" name="minus" type="button">
                      <span class="visually-hidden">
                        {{- 'products.product.quantity.decrease' | t: product: product.title | escape -}}
                      </span>
                      {% render 'icon-minus' %}
                    </button>
                    <input
                      class="quantity__input"
                      type="number"
                      name="quantity"
                      id="Quantity-{{ section.id }}"
                      min="1"
                      value="1"
                      form="{{ product_form_id }}"
                    >
                    <button class="quantity__button no-js-hidden" name="plus" type="button">
                      <span class="visually-hidden">
                        {{- 'products.product.quantity.increase' | t: product: product.title | escape -}}
                      </span>
                      {% render 'icon-plus' %}
                    </button>
                  </quantity-input>
                </div>
                <div class="product-form__buttons">
                  <button
                    type="submit"
                    name="add"
                    class="product-form__submit button button--full-width button--primary"
                    {% if product.selected_or_first_available_variant.available == false %}
                      disabled
                    {% endif %}
                  >
                    <span>
                      {%- if product.selected_or_first_available_variant.available -%}
                        {{ 'products.product.add_to_cart' | t }}
                      {%- else -%}
                        {{ 'products.product.sold_out' | t }}
                      {%- endif -%}
                    </span>
                    <div class="loading-overlay__spinner hidden">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        role="presentation"
                        class="spinner"
                        viewBox="0 0 66 66"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </div>
                  </button>
                </div>

                {% if customer.email == 'designer1@uniforms4all.com' and customer %}
                  <p>
                    Welcome back, {{ customer.first_name }}
                    {{ customer.last_name }}!
                  </p>
                  <div class="get-production-template">
                    <div class="line-item-property__field">
                      <label for="prod-temp-name">Name:</label>
                      <input type="text" id="prod-temp-name" class="badge-text-panel" autocomplete="off">
                    </div>
                    <div class="line-item-property__field">
                      <label for="prod-temp-date">Date:</label>
                      <input type="text" id="prod-temp-date" class="badge-text-panel" autocomplete="off">
                    </div>
                    <div class="line-item-property__field">
                      <label for="prod-temp-invoice-number">Invoice:</label>
                      <input type="text" id="prod-temp-invoice-number" class="badge-text-panel" autocomplete="off">
                    </div>
                    <div class="line-item-property__field">
                      <label for="prod-temp-design-sku">Design SKU:</label>
                      <input
                        type="text"
                        id="prod-temp-design-sku"
                        class="badge-text-panel"
                        autocomplete="off"
                        value="{{ product.title | escape }}"
                      >
                    </div>
                    <div class="line-item-property__field">
                      <label for="prod-temp-total-orders">Total:</label>
                      <input type="text" id="prod-temp-total-orders" class="badge-text-panel" autocomplete="off">
                    </div>
                    <div class="line-item-property__field">
                      <label for="prod-temp-additional">Additional:</label>
                      <textarea
                        id="prod-temp-additional"
                        class="badge-text-panel"
                      ></textarea>
                    </div>
                    <a href="#" class="button" id="getProductionTemplate">Get Template</a>
                  </div>
                {% endif %}

                <div class="badge-price">
                  <div class="custom-seal-price hidden" data-price="0"></div>
                  <div class="price-per-quantity">
                    Price Per Unit: $<span>
                      {{- badgesDetails.first.quantity_pricing.first.full_price -}}
                    </span>
                    USD
                  </div>
                  <div
                    class="total-price"
                    data-price="{{- badgesDetails.first.quantity_pricing.first.full_price -}}"
                  >
                    Total: $<span>
                      {{- badgesDetails.first.quantity_pricing.first.full_price -}}
                    </span>
                    USD
                  </div>
                </div>
              </div>
            {%- endform -%}
          </product-form>
        </div>
